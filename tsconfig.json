{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["**/*.spec.ts"],
  "hooks": [
    "copy-files"
  ],
  "lib": [
    "es2015"
  ]
}